{
	"extends": "@jonny",
	"rules": {
		"no-console": "off",
		"arrow-body-style": "off",
		"no-restricted-imports": [
			"error",
			{
				"patterns": ["@remotion/cli", "@remotion/*/src/*", "remotion/src/*"],
				"paths": ["remotion", "react", "react-dom"],
			},
		],
	},
	"overrides": [
		{
			"files": "./src/functions/helpers/http-handler/**",
			"rules": {
				"new-cap": "off",
				"prefer-const": "off",
				"no-eq-null": "off",
				"eqeqeq": "off",
			},
		},
		{
			"files": "./src/cli/**",
			"rules": {
				"no-console": "error",
				"no-restricted-imports": [
					"error",
					{
						"patterns": ["@remotion/*/src/*", "remotion/src/*"],
						"paths": ["remotion", "react", "react-dom"],
					},
				],
			},
		},
	],
}
