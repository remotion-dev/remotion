{
	"extends": "../tsconfig.settings.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"target": "ES2022",
		"module": "es2020",
		"moduleResolution": "bundler",
		"declaration": true,
		"emitDeclarationOnly": true,
		"resolveJsonModule": true
	},
	"include": ["src"]
}
